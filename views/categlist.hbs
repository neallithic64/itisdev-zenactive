<div style="height: auto;">
	<div class="row no-gutters" style="height: auto;">

		{{> admin-sidebar }}

		<div class="col" style="height: auto;">

			{{! HEADER }}
			<div class="d-flex justify-content-between align-items-center" style="text-align: right;font-size: 12px;padding-right: 3px;padding-left: 14px;">
				<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;">Category List</span>

				{{! SEARCH BAR }}
				<div class="d-flex">
					<input type="search" placeholder="Search" autocomplete="on" style="margin-right: 7px;">
					<div>
						<a href="#" class="searchbtn" onclick="search()"> <i class="fa fa-search"></i> </a>
					</div>
				</div>

				{{! ADD NEW CATEG BUTTON }}
				<button class="btn btn-primary" type="button" style="background: rgba(255,255,255,0);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;">
					<span style="text-decoration: underline;">Add New Category</span>
					<br>
				</button>
			</div>

			<div>
				<div class="table-responsive" style="max-height: 100vh;min-height: 100vh;margin-bottom: 0px;">
					<table class="table">
						<thead style="font-size: 10px;">
							<tr style="background-color: rgba(242,216,190,0.2);">
								<th style="width: 160px;">Category Name</th>
							</tr>
						</thead>

						<tbody>
							{{> categrow }}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
