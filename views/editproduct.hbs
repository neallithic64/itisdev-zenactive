<div style="height: auto;">
	<div class="row no-gutters" style="height: auto;">

		{{> admin-sidebar }}

		<div class="col" style="height: auto;">
			<div class="d-flex justify-content-between align-items-center" style="text-align: right;font-size: 12px;padding-right: 3px;padding-left: 14px;margin-bottom: 6px;margin-top: 6px;">
				<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;font-size: 20px;">
					Edit Product
				</span>
			</div>

			{{! EDIT PRODUCT DESC }}
			<div style="margin-top: 29px;padding-left: 15px;">
				<div class="d-flex flex-column">
					<span style="font-weight: 600;color: #93623c;">Edit Product Description</span>
					<span style="font-size: 14px;color: rgb(238,19,19);">Fields with * are required.</span>
				</div>

				<div style="margin-top: 23px;"><form id="editProd">
					{{! PRODUCT ID }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Product ID</label>
						<input name="editProdID" type="text" style="width: 310px;" value="{{{prod.productID}}}" readonly="true">
					</div>
					{{! PRODUCT NAME }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Product Name *</label>
						<input name="editProdName" type="text" style="width: 310px;" value="{{{prod.name}}}">
					</div>
					{{! PRODUCT SIZE }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Size *</label>
						<input name="editProdSize" type="text" style="width: 310px;" value="{{{prod.size}}}">
					</div>
					{{! PRODUCT COLOR }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Color *</label>
						<input name="editProdColor" type="text" style="width: 310px;" value="{{{prod.color}}}" >
					</div>
					{{! PRODUCT COLOR }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Color Picker *</label>
						<input name="editProdHex" type="color" style="width: 310px;" value="{{{prod.hexcode}}}" >
					</div>
					{{! PRODUCT PRICE }}
					<div class="form-group" style="margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Price *</label>
						<input name="editProdPrice" type="text" style="width: 310px;" value="{{{prod.price}}}">
					</div>
				</form></div>

				{{! SAVE BUTTON }}
				<button class="btn" type="button" id="editSave" style="border-width: 0px;font-weight: 600;color: #93623c;background: #f2d8be;margin: 31px 306px;">Save</button>
			</div>
			
			{{! EDIT PRODUCT CATEGORY }}
			<div style="margin-top: 29px;padding-left: 15px;">
				<div class="d-flex flex-column">
					<span style="font-weight: 600;color: #93623c;">Edit Product Category</span>
				</div>

				{{! REMOVE CATEG }}
				<div style="margin-top: 23px;">
					<div class="form-group d-flex" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Remove Category:</label>
						<select id="remCateg" style="background: rgba(255,255,255,0);border-width: 1px;color: #93623c;width: 252px;">
							<option value="0">Choose Category to Remove</option>
							{{#each prod.prodCateg}}
								<option value="{{{this.categName}}}">{{this.categName}}</option>
							{{/each}}
						</select>
					</div>
				</div>

				{{! ADD CATEG }}
				<div style="margin-top: 23px;">
					<div class="form-group d-flex" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Add Category:</label>
						<select id="addCateg" style="background: rgba(255,255,255,0);border-width: 1px;color: #93623c;width: 252px;">
							<option value="0">Choose Category to Add</option>
							{{#each categs}}
								<option value="{{{this}}}">{{this}}</option>
							{{/each}}
						</select>
					</div>
				</div>
			</div>

			{{! EDIT PRODUCT IMAGES }}

			<div style="margin-top: 29px;padding-left: 15px;margin-bottom: 13px;">
				<div class="d-flex flex-column">
					<span style="font-weight: 600;color: #93623c;">Edit Product Images</span>
				</div>


				<div style="margin-top: 23px;">

					{{! REMOVE IMAGE }}
					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Remove Image:</label>
						{{#each prod.prodPhoto}} {{> prodimagerow }} {{/each}}
					</div>

					{{! ADD IMAGE }}
					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Add Image:</label>
						<input type="text" name="addProdPhoto" placeholder="Input Image Link" style="width: 310px;" inputmode="url">
						<button class="btn btn-primary" type="button" style="border-width: 0px;font-weight: 600;color: #93623c;font-size: 10px;background: #f2d8be;margin-left: 24px;">Add Image</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
