<div style="height: auto;">
        <div class="row no-gutters" style="height: auto;">
            
			{{> admin-sidebar }}
			
            <div class="col" style="height: auto;">
                <div class="d-flex justify-content-between align-items-center" style="text-align: right;font-size: 12px;padding-right: 3px;padding-left: 14px;margin-bottom: 6px;margin-top: 6px;">
					<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;font-size: 20px;">Edit Product</span>
				</div>
				
				{{! EDIT PRODUCT DESC }}
                <div style="margin-top: 29px;padding-left: 15px;">
                    <div class="d-flex flex-column">
						<span style="font-weight: 600;color: #93623c;">Edit Product Description</span>
						<span style="font-size: 14px;color: rgb(238,19,19);">Fields with * are required.</span>
					</div>
					
					{{! THE PLACEHOLDERS SHOULD BE SET TO THE ORIGINAL DETAILS FOR REFERENCE }}
					
                    <div style="margin-top: 23px;">
						{{! PRODUCT ID }}
                        <div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Product ID *</label>
							<input id="editProdID" type="text" style="margin-left: 0px;" placeholder="TO-000001">
						</div>
						{{! PRODUCT NAME }}
                        <div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Product Name *</label>
							<input id="editProdName" type="text" style="margin-left: 0px;" placeholder="Passionate">
						</div>
						{{! PRODUCT SIZE }}
                        <div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Size *</label>
							<input id="editProdSize" type="text" style="margin-left: 0px;" placeholder="M">
						</div>
						{{! PRODUCT COLOR }}
                        <div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Color *</label>
							<input id="editProdColor" type="text" style="margin-left: 0px;" placeholder="Gray">
						</div>
						{{! PRODUCT PRICE }}
                        <div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Price *</label>
							<input id="editProdPrice" type="text" style="margin-left: 0px;" required="" placeholder="580.00">
						</div>
                    </div>
					
					{{! SAVE BUTTON }}
					<button class="btn btn-primary" type="button" style="color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 16px;background: #f2d8be;margin: 0px;margin-bottom: 0px;margin-top: 31px;margin-left: 306px;">Save</button>
				</div>
				
				
				{{! EDIT PRODUCT CATEGORY }}
				
                <div style="margin-top: 29px;padding-left: 15px;">
                    <div class="d-flex flex-column">
						<span style="font-weight: 600;color: #93623c;">Edit Product Category</span>
					</div>
					
					{{! REMOVE CATEG }}
                    <div style="margin-top: 23px;">
                        <div class="form-group d-flex" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Remove Category:</label>
                            <div class="dropdown">
								<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false" id="intranactions" type="button" style="background: rgba(255,255,255,0);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;width: 252px;">Choose Category to Remove</button>
                                <div class="dropdown-menu" style="min-width: 62px;width: 252px;margin-top: 0px;">
									<a class="dropdown-item" id="rmvtop" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Tops</a>
									<a class="dropdown-item" id="rmvbot" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Bottoms</a>
                                    <a class="dropdown-item" id="rmvset" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Sets</a>
									<a class="dropdown-item" id="rmvacc" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Accessories</a>
								</div>
							</div>
						</div>
					</div>
					
					{{! ADD CATEG }}
					<div style="margin-top: 23px;">
						<div class="form-group d-flex" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Add Category:</label>
							<div class="dropdown">
								<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false" id="intranactions-2" type="button" style="background: rgba(255,255,255,0);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;width: 252px;">Choose Category to Add</button>
								<div class="dropdown-menu" style="min-width: 62px;width: 252px;margin-top: 0px;">
									<a class="dropdown-item" id="addcateg1" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Tops</a>
									<a class="dropdown-item" id="addcateg2" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Bottoms</a>
									<a class="dropdown-item" id="addcateg3" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Sets</a>
									<a class="dropdown-item" id="addcateg4" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Accessories</a>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				{{! EDIT PRODUCT IMAGES }}
				
				<div style="margin-top: 29px;padding-left: 15px;margin-bottom: 13px;">
					<div class="d-flex flex-column">
						<span style="font-weight: 600;color: #93623c;">Edit Product Images</span>
					</div>
				
				
					<div style="margin-top: 23px;">
					
						{{! REMOVE IMAGE }}
						<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Remove Image:</label>
							
							{{> prodimgrow }}
							
						</div>
						
						{{! ADD IMAGE }}
						<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
							<label style="width: 167px;color: rgb(238,19,19);">Add Image:</label>
							<input type="text" placeholder="Input Image Link" style="width: 310px;">
							<button class="btn btn-primary" type="button" style="color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 10px;background: #f2d8be;margin: 0px;margin-bottom: 0px;margin-top: 0px;margin-left: 24px;">Add Image</button>
						</div>
						
					</div>
				</div>
			</div>
		</div>
</div>