<div style="height: auto;">
	<div class="row no-gutters" style="height: auto;">
		{{> admin-sidebar}}

		<div class="col" style="height: auto;">
			<div class="d-flex justify-content-between align-items-center" style="text-align: right;font-size: 12px;padding-right: 3px;padding-left: 14px;margin-bottom: 6px;margin-top: 6px;">
				<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;font-size: 20px;">Add New Product</span>
			</div>

			<div style="margin-top: 29px;padding-left: 15px;">
				<div class="d-flex flex-column">
					<span style="font-weight: 600;color: #93623c;">Product Description</span>
					<span style="font-size: 14px;color: rgb(238,19,19);">Fields with * are required.</span>
				</div>

				<div style="margin-top: 23px;">
					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Product ID *</label>
						<input type="text" style="margin-left: 0px;" placeholder="Product ID" required="">
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Product Name *</label>
						<input type="text" style="margin-left: 0px;" placeholder="Product Name" required="">
					</div>

					<div class="form-group d-flex" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Category *</label>

						<div class="dropdown">
							<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false" id="intranactions" type="button" style="background: rgba(255,255,255,0);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;">Choose Category</button>
							<div class="dropdown-menu" style="min-width: 62px;width: 205px;margin-top: 0px;">
								<a class="dropdown-item" id="actship" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Tops</a>
								<a class="dropdown-item" id="actcancel3" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Bottoms</a>
								<a class="dropdown-item" id="actcancel-2" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Sets</a>
								<a class="dropdown-item" id="actcancel-1" href="#" style="padding-left: 7px;font-size: 12px;padding-right: 5px;">Accessories</a>
							</div>
						</div>
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Size *</label>
						<input type="text" style="margin-left: 0px;" placeholder="Size" required="">
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Color *</label>
						<input type="text" style="margin-left: 0px;" placeholder="Color" required="">
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Price *</label>
						<input type="text" style="margin-left: 0px;" required="" placeholder="Price" inputmode="numeric">
					</div>
				</div>
			</div>

			<div style="margin-top: 29px;padding-left: 15px;">

				<div class="d-flex flex-column">
					<span style="font-weight: 600;color: #93623c;">Product Image</span>
					<span style="font-size: 14px;color: rgb(238,19,19);"></span>
				</div>

				<div style="margin-top: 23px;">
					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Upload Image *</label>
						<input type="text" placeholder="Input Image Link" style="width: 310px;" required="" inputmode="url">
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Upload Image&nbsp;</label>
						<input type="text" placeholder="Input Image Link" style="width: 310px;" required="" inputmode="url">
					</div>

					<div class="form-group" style="margin-bottom: 0px;margin-top: 10px;">
						<label style="width: 167px;color: rgb(238,19,19);">Upload Image&nbsp;</label>
						<input type="text" placeholder="Input Image Link" style="width: 310px;" required="" inputmode="url">
					</div>
				</div>
			</div>

			<button class="btn btn-primary" type="button" style="color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 16px;background: #f2d8be;margin: 0px;margin-bottom: 0px;margin-top: 31px;margin-left: 15px;">Add New Product</button>
		</div>
	</div>
</div>
