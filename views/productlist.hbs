<div style="height: auto;">
	 <div class="row no-gutters" style="height: auto;">

		{{> admin-sidebar }}

		<div class="col" style="height: auto;">

			{{! HEADER }}
			<div class="d-flex justify-content-between align-items-center" style="text-align: right;font-size: 12px;padding-right: 3px;padding-left: 14px;">
				<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;">Products List</span>

				{{! FILTER DROPDOWN }}
				<div class="d-flex align-items-center align-content-center">
					<span class="text-sm-center text-md-center text-lg-center text-xl-center" style="text-align: center;font-weight: 600;color: #93623c;">Show by:</span>
					<div class="dropdown">
						<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-expanded="false" id="sortcateg" type="button" style="background: rgba(255,255,255,0.4);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;">Category</button>
						<div class="dropdown-menu" style="min-width: 118px;width: 120px;margin-top: 0px;">
							<a class="dropdown-item" id="sorttops" href="#" style="padding-left: 14px;font-size: 12px;">Tops</a>
							<a class="dropdown-item" id="sortbots" href="#" style="padding-left: 14px;font-size: 12px;">Bottoms</a>
							<a class="dropdown-item" id="sortsets" href="#" style="padding-left: 14px;font-size: 12px;">Sets</a>
							<a class="dropdown-item" id="sortaccs" href="#" style="padding-left: 14px;font-size: 12px;">Accessories</a>
						</div>
					</div>
				</div>

				{{! SEARCH BAR }}
				<div class="d-flex"><input type="search" placeholder="Search" autocomplete="on" style="margin-right: 7px;">
					<div>
						<a href="#" class="searchbtn" onclick="search()"> <i class="fa fa-search"></i> </a>
					</div>
				</div>

				{{! ADD NEW PRODUCT BUTTON }}
				<button class="btn btn-primary" type="button" style="background: rgba(255,255,255,0);color: #000000;border-width: 0px;font-weight: 600;color: #93623c;font-size: 12px;">
					<span style="text-decoration: underline;">Add New Product</span><br>
				</button>
			</div>


			{{! TABLE }}
			<div>
				<div class="table-responsive" style="max-height: 100vh;min-height: 300PX;margin-bottom: 0px;">
					<table class="table">
						<thead style="font-size: 10px;">
							<tr style="background-color: rgba(242,216,190,0.2);">
								<th style="width: 160px;">Product ID</th>
								<th style="width: 172px;">Product Name</th>
								<th style="width: 248px;">Category</th>
								<th style="width: 118px;">Size</th>
								<th class="text-left" style="width: 103px;">Color</th>
								<th class="text-right" style="width: 116px;">Price</th>
								<th style="width: 160px;">Action</th>
							</tr>
						</thead>
						<tbody>
							{{#each products}} {{> productrow this}} {{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
