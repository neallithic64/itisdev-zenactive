<body style="font-family: Helvetica neue, sans-serif;background: rgb(242,216,190);">
	<div class="container" style="width: 100%;max-width: 100%;padding: 0px 50px;">
		<section></section>
		<section>
			<div class="row d-xl-flex flex-wrap justify-content-xl-center">

				<!--FORM-->
				<div class="col-10 col-xl-7 d-block align-items-center align-content-center flex-nowrap" style="position: static;background: rgba(227,154,149,0);margin-top: 0px;padding: 0px;">
					<section style="margin-bottom: 75px;background: rgba(227,181,149,0.71);padding: 25px;">
						<form id="checkout">
							<div class="form-row" style="margin: 0px;margin-bottom: 15px;">
								<div class="col" style="padding: 0px 10px;margin-top: -10px;">
									<p class="text-center" style="margin-bottom: 0px;margin-top: 30px;text-align: center;font-size: 30px;color: rgb(148,96,59);">
										<strong>Contact&nbsp;Details</strong>
									</p>
									<hr>
								</div>
							</div>
							<div class="form-row" style="margin: 0px;">
								<div class="col">
									<div class="form-row" style="margin-bottom: 15px;">
										<div class="col" style="padding: 0px 10px;">
											<p style="margin-bottom: 0px;">Complete Name</p>
											<!--NAME-->
											<input class="form-control" type="text" name="compname">
										</div>
									</div>
								</div>
							</div>
							<div class="form-row" style="margin: 0px;">
								<div class="col">
									<div class="form-row" style="margin-bottom: 15px;">
										<div class="col" style="padding: 0px 10px;">
											<p style="margin-bottom: 0px;">Email</p>
											<!--EMAIL-->
											<input class="form-control" type="email" name="email">
										</div>
										<div class="col" style="padding: 0px 10px;">
											<p style="margin-bottom: 0px;">Phone Number (ex:&nbsp;<em>09123456789</em>)</p>
											<!--NUMBER-->
											<input class="form-control" type="text" name="contno">
										</div>
									</div>
								</div>
							</div>
							<div class="form-row" style="margin: 0px;margin-bottom: 15px;">
								<div class="col" style="padding: 0px 10px;">
									<p class="text-center" style="margin-bottom: 0px;margin-top: 30px;text-align: center;font-size: 30px;color: rgb(148,96,59);">
										<strong>Shipping &amp;&nbsp;Payment</strong>
									</p>
									<hr>
								</div>
							</div>
							<div class="form-row" style="margin: 0px;margin-bottom: 15px;">
								<div class="col" style="padding: 0px 10px;">
									<p style="margin-bottom: 0px;">Complete Address</p>
									<!--ADDRESS-->
									<input class="form-control" type="text" name="address">
								</div>
							</div>
							<div class="form-row" style="margin: 0px;">
								<div class="col">
									<div class="form-row" style="margin-bottom: 15px;">
										<div class="col" style="padding: 0px 10px;">
											<p style="margin-bottom: 0px;">City</p>
											<!--CITY-->
											<input class="form-control" type="text" name="city">
										</div>
										<div class="col" style="padding: 0px 10px;">
											<p style="margin-bottom: 0px;">Area</p>
											<!--AREA-->
											<select name="area" class="form-control" style="width: 100%;">
												<option >Metro Manila</option>
												<option >Luzon</option>
												<option >Visayas</option>
												<option >Mindanao</option>
											</select>
										</div>
									</div>
								</div>
							</div>
							<!--MODE OF PAYMENT-->
							<div class="form-row" style="margin: 0px;margin-bottom: 15px;">
								<div class="col" style="padding: 0px 10px;">
									<p style="margin-bottom: 0pc;">Mode of Payment</p>
									<div class="form-row">
										<div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
											<div class="form-check d-xl-flex align-items-xl-center">
												<input class="form-check-input" type="radio" id="formCheck-1" name="modePay" value="PayPal">
												<label class="form-check-label" for="formCheck-1">
													<img src="../../assets/img/paypal.png" style="height: 50px;">
												</label>
											</div>
										</div>
										<div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
											<div class="form-check d-xl-flex align-items-xl-center">
												<input class="form-check-input" type="radio" id="formCheck-2" name="modePay" value="BDO">
												<label class="form-check-label" for="formCheck-2">
													<img src="../../assets/img/bdo.png" style="height: 40px;">
												</label>
											</div>
										</div>
										<div class="col d-xl-flex justify-content-xl-center align-items-xl-center">
											<div class="form-check d-xl-flex align-items-xl-center">
												<input class="form-check-input" type="radio" id="formCheck-3" name="modePay" value="GCash">
												<label class="form-check-label" for="formCheck-3">
													<img src="../../assets/img/gcash.png" style="height: 60px;margin-left: -11px;">
												</label>
											</div>
										</div>
									</div>
								</div>
							</div>
						</form>
					</section>
				</div>
				
				<div class="col-xl-2" style="max-width: 5%;"></div>
				
				<!-- ORDER SUMMARY -->
				<div class="col-xl-4" style="background: rgba(255,255,255,0);padding: 0px;">
					<div style="top: 30px;background: rgb(255,255,255);width: 100%;padding-top: 50px;padding-right: 30px;padding-left: 30px;padding-bottom: 50px;">
						<h1 style="margin: 0px;font-size: 20px;margin-bottom: 14px;text-align: center;">
							<strong>ORDER SUMMARY</strong>
						</h1>
						<hr>
						<div style="margin-bottom: 30px;margin-top: 30px;">
							<!--PER ITEM (1)-->

							{{#each bag}}
								<div class="row text-nowrap d-inline-flex d-xl-flex flex-nowrap justify-content-xl-center" style="margin: 0px;margin-top: 15px;margin-bottom: 15px;">
									<div class="col-xl-2" style="padding: 0px;">
										<img src="../../assets/img/IMG_2406.JPG" style="max-height: 60px;">
									</div>
									<div class="col-xl-7" style="padding-top: 1px;">
										<div>
											<h1 style="margin: 0px;font-size: 16px;">
												<strong>THRIVING - CODE</strong>
											</h1>
											<p style="margin: 0px;font-size: 12px;">Pink /&nbsp;Medium</p>
											<p style="margin: 0px;font-size: 12px;">Quantity: 1</p>
										</div>
									</div>
									<div class="col-xl-2" style="padding: 0px;">
										<h1 style="font-size: 16px;margin: 0px;text-align: center;">
											<strong>P 200</strong>
										</h1>
									</div>
								</div>
							{{/each}}
						</div>
						<hr>
						<div class="flex-wrap" style="width: 100%;background: #f1f1f1;border-radius: 0px;padding: 15px;margin-top: 10px;">
							<div class="row d-inline-flex" style="width: 100%;margin: 0px;">
								<div class="col" style="width: 60%;">
									<p class="d-xl-flex justify-content-xl-start align-items-xl-end" style="margin: 0px;font-size: 20px;">SUBTOTAL</p>
								</div>
								<div class="col">
									<p class="d-xl-flex justify-content-xl-end align-items-xl-start" style="margin: 0px;font-size: 20px;text-align: right;">
										<!--SUBTOTAL-->
										<strong id="subtot">Php {{getPrice subtotal}}</strong>
									</p>
								</div>
							</div>
							<div class="row d-inline-flex" style="width: 100%;margin: 0px;">
								<div class="col" style="width: 60%;">
									<p style="margin-bottom: 0px;font-size: 16px;">Shipping fee</p>
								</div>
								<div class="col">
									<p class="d-xl-flex justify-content-xl-end align-items-xl-start" style="margin: 0px;font-size: 16px;text-align: right;">
										<!--SHIPPING: 80 if MM; otherwise 150-->
										<strong id="shipping">80</strong>
									</p>
								</div>
							</div>
							<hr style="margin: 0px;margin-top: 10px;">
							<div class="row d-inline-flex" style="width: 100%;margin: 0px;margin-top: 10px;">
								<div class="col-xl-3 d-xl-flex align-items-xl-end" style="width: 60%;">
									<p class="d-xl-flex justify-content-xl-start align-items-xl-end" style="margin: 0px;font-size: 20px;">
										<strong>TOTAL</strong>
									</p>
								</div>
								<div class="col">
									<p class="d-xl-flex justify-content-xl-end align-items-xl-start" style="margin: 0px;font-size: 30px;text-align: right;">
										<!--TOTAL-->
										<strong id="total">Php {{getPrice total}}</strong>
									</p>
								</div>
							</div>
						</div>
						<div style="margin-top: 40px;margin-bottom: 50px;">
							<p style="text-align: center;margin-bottom: 5px;">
								<strong>Note</strong>
							</p>
							<p style="text-align: center;">All items are for pre-order, which means it will take at least 2 weeks for your orders to arrive. Thank you for understanding. Happy shopping!</p>
						</div>
						<button id="placeOrder" class="btn btn-primary d-xl-flex justify-content-xl-center align-items-xl-center" type="button" style="height: 60px;width: 100%;color: rgb(242,216,190);background: rgb(148,96,59);font-size: 30px;">
							<strong>PLACE ORDER</strong>
						</button>
					</div>
				</div>
			</div>
		</section>
	</div>
</body>
